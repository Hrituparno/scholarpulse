# ScholarPulse Environment Configuration
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to source control!

# ============================================
# Multi-LLM Provider API Keys (ALL REQUIRED FOR BEST QUALITY)
# ============================================

# Groq API (Fast Summarization - PRIMARY)
# Get your key from: https://console.groq.com/keys
# Used for: Fast paper summarization, quick extraction
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API (Deep Synthesis - PRIMARY)
# Get your key from: https://makersuite.google.com/app/apikey
# Used for: Research synthesis, comprehensive analysis
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Oxlo API (Fallback + Ideas - REQUIRED)
# Get your key from: https://oxlo.ai
# Used for: Fallback when Groq/Gemini fail, idea generation
OXLO_API_KEY=your_oxlo_api_key_here

# ============================================
# Search & Data APIs
# ============================================

# Serper API (Web search)
# Get your key from: https://serper.dev
SERPER_API_KEY=your_serper_api_key_here

# ============================================
# Django Backend Configuration
# ============================================

# Django Secret Key (Generate a new one for production!)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Debug mode (Set to False in production)
DJANGO_DEBUG=True

# ============================================
# Optional Configuration
# ============================================

# Output directory for generated reports
SCHOLARPULSE_OUTPUT_DIR=output

# Backend API URL (for frontend)
SCHOLARPULSE_API_URL=http://localhost:8000
